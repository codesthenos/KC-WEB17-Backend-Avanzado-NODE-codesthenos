<!DOCTYPE html>
<html>
  <%- include('head.ejs') %>
  <body>
    <%- include('header.ejs')%>
    <form method="post" class="form" enctype="multipart/form-data">
      <div>
        <label for="name"><%= __('Name') %></label>
        <input
          type="text"
          id="name"
          name="name"
          value="<%= productName %>"
          required
        />
      </div>
      <div>
        <label for="price"><%= __('Price') %></label>
        <input
          type="number"
          id="price"
          name="price"
          value="<%= productPrice %>"
          required
        />
      </div>
      <% if (title === 'UPDATE PRODUCT NODEPOP') {%>
        <div class="product-image">
          <h3><%= __('Current image') %></h3>
          <img src="<%= productImage ? productImage : '/productsImages/placeholder.jpg' %>" alt="<%= productName %>">
          <input type="hidden" name="oldImage" value="<%= productImage %>">
        </div>
      <% } %>
      <div>
        <label for="image"><%= title === 'UPDATE PRODUCT NODEPOP' ? __('New image') : __('Image') %></label>
        <input
          type="file"
          accept="image/*"
          id="image"
          name="image"
        />
      </div>
      <h3><%= __('Tags') %></h3>
      <div class="tag-wrapper">
        <div>
          <div class="tag-div">
            <label for="tag-work">work</label>
            <input type="checkbox" id="tag-work" name="tags" value="work" <%=
            productTags && productTags.includes("work") ? 'checked' : '' %> />
          </div>
          <div class="tag-div">
            <label for="tag-lifestyle">lifestyle</label>
            <input type="checkbox" id="tag-lifestyle" name="tags"
            value="lifestyle" <%= productTags &&
            productTags.includes("lifestyle") ? 'checked' : '' %> />
          </div>
        </div>
        <div>
          <div class="tag-div">
            <input type="checkbox" id="tag-motor" name="tags" value="motor" <%=
            productTags && productTags.includes("motor") ? 'checked' : '' %> />
            <label for="tag-motor">motor</label>
          </div>
          <div class="tag-div">
            <input type="checkbox" id="tag-mobile" name="tags" value="mobile"
            <%= productTags && productTags.includes("mobile") ? 'checked' : ''
            %> />
            <label for="tag-mobile">mobile</label>
          </div>
        </div>
      </div>

      <button class="btn"><%= __('Submit') %></button>
    </form>
    <% if (error) { %>
    <pre><%= __(error) %></pre>
    <% } %>
  </body>
</html>
