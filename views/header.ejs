<header class="header">
  <h1><%= __(title) %></h1>
  <% if (title === 'CODESTHENOS-NODEPOP' && session.userId) { %>
  <a class="btn" href="/create-product"><%= __('create new product') %></a>
  <a class="btn" href="<%= headerLinkHref %>"><%= __(headerLinkText) %></a>
  <% } %> <% if (title === 'CODESTHENOS-NODEPOP' && !session.userId) { %>
  <a class="btn" href="/register"><%= __('REGISTER') %></a>
  <a class="btn" href="<%= headerLinkHref %>"><%= __(headerLinkText) %></a>
  <% } %> <% if (title === 'LOGIN CODESTHENOS-NODEPOP') { %>
  <a class="btn" href="/register"><%= __('REGISTER') %></a>
  <a class="btn" href="<%= headerLinkHref %>"><%= __(headerLinkText) %></a>
  <% } %> <% if (title === 'REGISTER CODESTHENOS-NODEPOP') { %>
  <a class="btn" href="/login"><%= __('LOGIN') %></a>
  <a class="btn" href="<%= headerLinkHref %>"><%= __(headerLinkText) %></a>
  <% } %> <% if (title === 'CREATE PRODUCT NODEPOP' || title === 'UPDATE PRODUCT NODEPOP') { %>
  <a class="btn" href="<%= headerLinkHref %>"><%= __(headerLinkText) %></a>
  <a class="btn" href="/logout"><%= __('LOGOUT') %></a>
  <% } %>
  <div class="lang-buttons-div">
    <% getLocales().forEach(lang => { %>
      <a href="/change-lang/<%= lang %>">
        <img class="lang-button" src="/<%= lang %>-flag.png" alt="<%= lang %>">
      </a>
    <% }) %>
  </div>
</header>
